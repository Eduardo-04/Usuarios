{
  "compilerOptions": {
    "rootDirs": ["src"],
    "outDir": "dist",
    "lib": ["es2020"],
    "target": "es2020",
    "module": "commonjs",        
    "moduleResolution": "node",
    "types": ["node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true, 
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions": true,


  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "strict": true
}
